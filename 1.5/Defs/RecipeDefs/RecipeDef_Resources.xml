			<li>BotchJob_ProfaneAlchemyBench</li>
		</recipeUsers>
		<researchPrerequisites>
			<li>BotchJob_ProfanedAdvanced</li>
		</researchPrerequisites>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Silver</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BotchJob_LuminousDust</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Silver</li>
				<li>BotchJob_LuminousDust</li>
				<li>Cloth</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BotchJob_WraithOrb>1</BotchJob_WraithOrb>
		</products>
		<skillRequirements>
			<Crafting>3</Crafting>
			<Intellectual>6</Intellectual>
		</skillRequirements>
		<workSkill>Intellectual</workSkill>
	</RecipeDef>

